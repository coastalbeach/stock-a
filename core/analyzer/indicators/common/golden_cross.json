{
  "name": "golden_cross",
  "display_name": "金叉信号",
  "description": "短期均线从下方穿越长期均线，产生买入信号",
  "version": "1.0",
  "author": "系统",
  "category": "趋势信号",
  "tags": ["均线", "金叉", "买入信号"],
  
  "data_sources": [
    {
      "table": "股票技术指标",
      "columns": ["SMA5", "SMA20"],
      "id_column": "股票代码",
      "date_column": "日期",
      "aliases": {
        "SMA5": "short_ma",
        "SMA20": "long_ma"
      },
      "conditions": {},
      "required": true
    }
  ],
  
  "calculation": {
    "operation": "crossover",
    "series1": "short_ma",
    "series2": "long_ma"
  },
  
  "post_processing": {
    "dtype": "int",
    "fill_na": 0,
    "description": "将布尔值转换为整数，True=1, False=0"
  },
  
  "output": {
    "table": "股票衍生指标",
    "column": "金叉信号",
    "data_type": "INTEGER",
    "description": "金叉信号，1表示金叉，0表示无信号",
    "default_value": 0
  },
  
  "validation": {
    "min_data_points": 25,
    "required_columns": ["short_ma", "long_ma"],
    "data_quality_checks": [
      {
        "type": "not_null",
        "columns": ["short_ma", "long_ma"]
      },
      {
        "type": "positive",
        "columns": ["short_ma", "long_ma"]
      }
    ]
  },
  
  "parameters": {
    "short_period": {
      "default": 5,
      "description": "短期均线周期",
      "type": "int",
      "min": 1,
      "max": 50
    },
    "long_period": {
      "default": 20,
      "description": "长期均线周期",
      "type": "int",
      "min": 2,
      "max": 200
    }
  },
  
  "applicable_entities": ["stock", "index"],
  "frequency": ["daily", "weekly"],
  
  "performance": {
    "complexity": "low",
    "estimated_time_per_entity": "0.1s",
    "memory_usage": "low"
  },
  
  "dependencies": {
    "indicators": ["SMA_5", "SMA_20"],
    "tables": ["技术指标表"]
  },
  
  "examples": [
    {
      "description": "典型金叉信号",
      "input": {
        "short_ma": [10.0, 10.5, 11.0, 11.5, 12.0],
        "long_ma": [11.0, 11.0, 11.0, 11.0, 11.0]
      },
      "expected_output": [0, 0, 0, 1, 0]
    }
  ],
  
  "metadata": {
    "created_date": "2024-01-01",
    "last_modified": "2024-01-01",
    "test_status": "passed",
    "documentation_url": "https://example.com/docs/golden_cross"
  }
}